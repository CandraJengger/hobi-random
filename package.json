{
  "name": "hobi-random",
  "version": "1.0.0",
  "description": "Pustaka kecil yang dapat membantu kamu mendapatkan hobi acak",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/*.js",
    "lint:fix": "eslint src/*.js --fix",
    "format": "prettier src/*.js --write",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:staged": "lint-staged",
    "prepare": "husky install"

  },
  "keywords": [
    "faker",
    "seeder"
  ],
  "author": "Dimas Aldi Candrsa S.",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.7.0",
    "eslint-plugin-jest": "^25.7.0",
    "husky": "^7.0.0",
    "jest-cli": "^27.4.7",
    "lint-staged": "^12.2.2",
    "prettier": "^2.5.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run format"
    ]
  }
}
