{
  "name": "hobi-random",
  "version": "1.0.0",
  "description": "Pustaka kecil yang dapat membantu kamu mendapatkan hobi acak",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/*.js",
    "lint:fix": "eslint src/*.js --fix",
    "format": "prettier src/*.js --write",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:staged": "lint-staged",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore src/test --copy-files"
  },
  "keywords": [
    "faker",
    "seeder"
  ],
  "author": "Dimas Aldi Candrsa S.",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "eslint": "^8.7.0",
    "eslint-plugin-jest": "^25.7.0",
    "husky": "^7.0.0",
    "jest-cli": "^27.4.7",
    "lint-staged": "^12.2.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run format"
    ]
  }
}
